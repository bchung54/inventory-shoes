<h1><%= title %></h1>
<form action="" method="post">
  <div class="form-group">
    <label for="shoe">Shoe:</label>
    <select
      type="select"
      id="shoe"
      class="form-control"
      placeholder="Select shoe"
      name="shoe"
    >
      <% shoe_list.forEach(shoe => { %>
      <option value="<%= shoe._id %>">
        <%= `${shoe.brand.name} - ${shoe.name} -
        ${shoe.category.gender[0].toUpperCase() +
        shoe.category.gender.slice(1)}`%>
      </option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="color">Color:</label>
    <% if (title.includes('Update')) { %>
    <input
      type="text"
      id="color"
      class="form-control"
      name="color"
      value="<%= sku.color %>"
      readonly
    />
    <% } else { %>
    <input
      type="text"
      id="color"
      class="form-control"
      name="color"
      value="<%= sku ? sku.color : '' %>"
      required
    />
    <% } %>
    <label for="size">Size:</label>
    <% if (title.includes('Update')) { %>
    <input
      type="number"
      id="size"
      class="form-control"
      name="size"
      value="<%= sku.size %>"
      readonly
    />
    <% } else { %>
    <input
      type="number"
      id="size"
      class="form-control"
      name="size"
      value="<%= sku ? sku.size : '' %>"
      required
    />
    <% } %>
  </div>
  <div class="form-group">
    <label for="price">Price:</label>
    <input
      type="number"
      step="0.01"
      id="price"
      class="form-control"
      name="price"
      value="<%= sku ? sku.price : '' %>"
      required
    />
    <label for="qty">In Stock:</label>
    <input
      type="number"
      id="qty"
      class="form-control"
      name="qty"
      value="<%= sku ? sku.qty : 0 %>"
    />
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
<% if (errors) { %>
<ul>
  <% errors.forEach(error => { %>
  <li><%= error.msg %></li>
  <% }); } %>
</ul>
