<h1><%= title %> : <%= shoe.name %></h1>
<p><%= shoe.brand.name %></p>
<p><%= shoe.desc ? shoe.desc : '' %></p>
<% if (skus.length > 0) { %>
<p>
  <strong
    >Delete the following SKUs before attempting to delete this shoe.</strong
  >
</p>
<div style="margin-left: 20px; margin-top: 20px">
  <h4>SKUs</h4>
  <dl>
    <% skus.forEach(sku => { %>
    <dt>
      <a href="<%= sku.url %>">SKU#: <%= sku._id %></a>
    </dt>
    <dd>
      <ul>
        <li>Color: <%= sku.color %></li>
        <li>Size: <%= sku.size %></li>
        <li>Price: <%= sku.price %></li>
        <li>Qty: <%= sku.qty %></li>
      </ul>
    </dd>
    <% }) %>
  </dl>
</div>
<% } else { %>
<p>Do you really want to delete this shoe?</p>
<form action="" method="post">
  <div class="form-group">
    <input
      type="hidden"
      id="shoeid"
      class="form-control"
      name="shoeid"
      value="<%= shoe._id %>"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Delete</button>
</form>
<% } %>
